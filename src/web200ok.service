[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=magellan
Group=magellan
WorkingDirectory=/home/magellan/Projects/web200ok
ExecStart=/home/magellan/Projects/web200ok/.venv/bin/gunicorn \
        --workers 2 \
        --bind unix:/tmp/web200ok.sock \
        --access-logfile logs/access.log \
        --error-logfile logs/error.log \
        config.wsgi:application

[Install]
WantedBy=multi-user.target